<div class="card">
    <div class="card-header"> @ViewData["Title"] </div>

    <div class="card-body">
        <h5 class="card-title">@ViewData["Title"] </h5>

        <p class="card-text">Enter the email address that you used to register. We'll send you an email with a link to reset your password.</p>

        <form method="POST">
            <div asp-validation-summary="ModelOnly"></div>

            <!-- EMAIL -->
            <div>
                <label asp-for="Email" for="email" >Your email</label>
                <input asp-for="Email" type="email" name="email" id="email" placeholder="name@company.com" required="">
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <!-- SEND BUTTON -->
            <button type="submit" asp-action="ForgotPassword"> Send Email to Reset Password </button>
            @* <a href="#" class="btn btn-primary">Go somewhere</a> *@

        </form>
    </div>
</div>

