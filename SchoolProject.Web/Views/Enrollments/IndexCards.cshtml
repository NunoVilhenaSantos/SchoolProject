<div class="album py-5 bg-body-tertiary">
    <div class="container-fluid">
        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-2 row-cols-xl-3 row-cols-xxl-5 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    @* <div class="card shadow-sm"> *@
                    <div class="card shadow-sm">
                        <div class="card-img-top">
                            <img alt="Profile Photo" class="img-fluid" src="~/images/PlaceHolders/legacy.png">
                        </div>

                        <div class="card-body">
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Grade)</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning"> <span class="fa-regular fa-pen-to-square"></span> Edit </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info"> <span class="fa-regular fa-file"></span> Details </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><span class="fa-regular fa-trash-can"></span> Delete </a>
                                </div>
                                <small class="text-body-secondary">
                                    @Html.DisplayNameFor(modelItem => item.Student.FullName)<br />
                                    @Html.DisplayFor(modelItem => item.Student.FullName)
                                </small>
                                <small class="text-body-secondary">
                                    @Html.DisplayNameFor(modelItem => item.Course.Name)<br />
                                    @Html.DisplayFor(modelItem => item.Course.Name)
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>