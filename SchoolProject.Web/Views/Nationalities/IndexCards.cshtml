                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning"> <span class="fa-regular fa-pen-to-square"></span> Edit </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info"> <span class="fa-regular fa-file"></span> Details </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><span class="fa-regular fa-trash-can"></span> Delete </a>

                                </div>
                                <small class="text-body-secondary">@Html.DisplayFor(modelItem => item.CreatedBy)</small>
                                <small class="text-body-secondary">@Html.DisplayFor(modelItem => item.UpdatedBy)</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>