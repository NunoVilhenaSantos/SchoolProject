<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    @* <div class="card shadow-sm"> *@
                    <div class="card shadow-sm">
                        <div class="card-img-top">
                            <img alt="Profile Photo" class="img-fluid" src="~/images/icons/school-256x256.ico">
                        </div>

                        <div class="card-body">
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Name)</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a> *@
