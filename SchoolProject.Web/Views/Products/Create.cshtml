@model SchoolProject.Web.Data.Entities.OtherEntities.Gender
@* @model SchoolProject.Web.Models.ProductViewModel *@

@{
    ViewData["Title"] = "Create";
}


<br/>
<h1>@ViewData["Title"] </h1>
<br/>
<h4>Product</h4>
<br/>

<hr/>
<div class="container-fluid">
    <div class="row">

        <partial name="_ProductsImages"/>

        <div class="col">

            <div class="row">

                <form asp-area="" asp-controller="Genders" asp-action="Create" enctype="multipart/form-data">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <partial name="_Products"/>

                    <br/>
                    <div class="form-group">
                        @* <button type="submit" class="btn btn-outline-primary"><span class="fa-solid fa-floppy-disk"></span> Create</button> *@
                        <button type="submit" class="btn btn-primary">
                            @* <i class="material-symbols-outlined">chevron_right</i> *@
                            <span class="material-symbols-outlined">add_circle</span>
                            <i class="fa-solid fa-floppy-disk"></i> Create
                        </button>
                        @* <a asp-action="Index" class="btn btn-secondary">Back to List</a> *@
                        <a asp-area="" asp-controller="Genders" asp-action="Index" class="btn btn-secondary">
                            <span class="material-symbols-outlined">chevron_left</span>
                            <i class="fa-solid fa-arrow-left"></i> Back to List
                        </a>
                    </div>

                </form>

            </div>

        </div>

    </div>

</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}