@using SchoolProject.Web.Controllers
@{
    var currentController = ViewContext.RouteData.Values["controller"] as string;
    var currentAction = ViewContext.RouteData.Values["action"] as string;
}


<div class="dropdown">

    <a class="nav-link dropdown-toggle @(currentController is "Cities" or "Countries" or "Nationalities" ? "active" : "") p-1"
       role="button" data-bs-toggle="dropdown" aria-expanded="false">
        <svg class="bi d-block mx-auto mb-1" fill="currentColor" height="2em" viewBox="0 0 448 512"
             xmlns="http://www.w3.org/2000/svg">
            <path d="M0 96C0 43 43 0 96 0H384h32c17.7 0 32 14.3 32 32V352c0 17.7-14.3 32-32 32v64c17.7 0 32 14.3 32 32s-14.3 32-32 32H384 96c-53 0-96-43-96-96V96zM64 416c0 17.7 14.3 32 32 32H352V384H96c-17.7 0-32 14.3-32 32zM247.4 283.8c-3.7 3.7-6.2 4.2-7.4 4.2s-3.7-.5-7.4-4.2c-3.8-3.7-8-10-11.8-18.9c-6.2-14.5-10.8-34.3-12.2-56.9h63c-1.5 22.6-6 42.4-12.2 56.9c-3.8 8.9-8 15.2-11.8 18.9zm42.7-9.9c7.3-18.3 12-41.1 13.4-65.9h31.1c-4.7 27.9-21.4 51.7-44.5 65.9zm0-163.8c23.2 14.2 39.9 38 44.5 65.9H303.5c-1.4-24.7-6.1-47.5-13.4-65.9zM368 192a128 128 0 1 0 -256 0 128 128 0 1 0 256 0zM145.3 208h31.1c1.4 24.7 6.1 47.5 13.4 65.9c-23.2-14.2-39.9-38-44.5-65.9zm31.1-32H145.3c4.7-27.9 21.4-51.7 44.5-65.9c-7.3 18.3-12 41.1-13.4 65.9zm56.1-75.8c3.7-3.7 6.2-4.2 7.4-4.2s3.7 .5 7.4 4.2c3.8 3.7 8 10 11.8 18.9c6.2 14.5 10.8 34.3 12.2 56.9h-63c1.5-22.6 6-42.4 12.2-56.9c3.8-8.9 8-15.2 11.8-18.9z"/>
        </svg>
        @CountriesController.ControllerName
    </a>

    <ul class="dropdown-menu">
        <li>
            <a asp-action="Index" asp-area="" asp-controller="Countries"
               class="dropdown-item @(currentAction == "Index" && currentController == "Countries" ? "active" : "")">
                <span class="material-symbols-outlined">flag_circle</span>
                <span class="fa-solid fa-globe fa-beat fa-2xl"></span>
                @CountriesController.ControllerName List
            </a>
        </li>
        <li>
            <a asp-action="IndexCards" asp-area="" asp-controller="Countries"
               class="dropdown-item @(currentAction == "IndexCards" && currentController == "Countries" ? "active" : "")">
                <span class="fas fa-person-through-window"></span>
                @CountriesController.ControllerName Cards
            </a>
        </li>
        <li>
            <a asp-action="IndexCards1" asp-area="" asp-controller="Countries"
               class="dropdown-item @(currentAction == "IndexCards1" && currentController == "Countries" ? "active" : "")">
                <span class="fas fa-person-through-window"></span>
                @CountriesController.ControllerName Cards 1
            </a>
        </li>

        <li>
            <hr class="dropdown-divider">
        </li>
        <li>
            <a asp-action="Index" asp-area="" asp-controller="Nationalities"
               class="dropdown-item @(currentAction == "Index" && currentController == "Nationalities" ? "active" : "")">
                <span class="material-symbols-outlined">language_international</span>
                <span class="fa-solid fa-map-location-dot fa-xl"></span>
                @NationalitiesController.ControllerName List
            </a>
        </li>
        <li>
            <a asp-action="IndexCards" asp-area="" asp-controller="Nationalities"
               class="dropdown-item @(currentAction == "IndexCards" && currentController == "Nationalities" ? "active" : "")">
                <span class="fas fa-person-through-window"></span>
                @NationalitiesController.ControllerName Cards
            </a>
        </li>
        <li>
            <a asp-action="IndexCards1" asp-area="" asp-controller="Nationalities"
               class="dropdown-item @(currentAction == "IndexCards1" && currentController == "Nationalities" ? "active" : "")">
                <span class="fas fa-person-through-window"></span>
                @NationalitiesController.ControllerName Cards 1
            </a>
        </li>

        <li>
            <hr class="dropdown-divider">
        </li>
        <li>
            <a asp-action="Index" asp-area="" asp-controller="Cities"
               class="dropdown-item @(currentAction == "Index" && currentController == "Cities" ? "active" : "")">
                <span class="material-symbols-outlined">location_city</span>
                @CitiesController.ControllerName List
            </a>
        </li>
        <li>
            <a asp-action="IndexCards" asp-area="" asp-controller="Cities"
               class="dropdown-item @(currentAction == "IndexCards" && currentController == "Cities" ? "active" : "")">
                <span class="fas fa-person-through-window"></span>
                @CitiesController.ControllerName Cards
            </a>
        </li>
        <li>
            <a asp-action="IndexCards1" asp-area="" asp-controller="Cities"
               class="dropdown-item @(currentAction == "IndexCards1" && currentController == "Cities" ? "active" : "")">
                <span class="fas fa-person-through-window"></span>
                @CitiesController.ControllerName Cards 1
            </a>
        </li>
    </ul>

</div>