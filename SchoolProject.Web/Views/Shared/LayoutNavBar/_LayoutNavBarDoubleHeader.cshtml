                    data-bs-target="#offCanvasAdminPanel" data-bs-toggle="offcanvas" type="button">
                    <span class="material-symbols-outlined">settings_account_box</span>
                    Admin Panel
                </button>

                @* <button *@
                @*     aria-controls="offcanvasRight" class="btn btn-primary" *@
                @*     data-bs-target="#offCanvasAdminPanel" data-bs-toggle="offcanvas" type="button"> *@
