        <div class="b-example-divider d-none">Buttons for login and register user / change user and logout</div>
        <div class="text-end">
            @if (User.Identity.IsAuthenticated)
            {
                <a class="btn btn-light text-dark me-2  @(currentAction == "ChangeUser" && currentController == "Account" ? "active" : "")"
                   asp-area="" asp-controller="Account" asp-action="ChangeUser">

                    @* <span class="fa-solid fa-user-plus fa-2xl"></span> *@
