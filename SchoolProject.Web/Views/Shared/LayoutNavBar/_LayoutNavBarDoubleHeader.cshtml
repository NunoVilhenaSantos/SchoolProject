        }

        <div class="nav-item py-2 py-lg-1 col-12 col-lg-auto">
            <div class="vr d-none d-lg-flex h-100 mx-lg-2 "></div>
            <hr class="d-lg-none my-2 ">
        </div>

        <div class="form-check form-switch me-2">
            <div class="d-flex flex-column">
