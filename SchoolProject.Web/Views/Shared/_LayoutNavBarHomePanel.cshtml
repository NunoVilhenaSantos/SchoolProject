@{
    var currentController = ViewContext.RouteData.Values["controller"] as string;
    var currentAction = ViewContext.RouteData.Values["action"] as string;
}

<div class="dropdown">
    @* <span class="material-symbols-outlined">settings</span> *@
    <a class="nav-link dropdown-toggle @(currentController == "Home" ? "active" : "")"
       role="button" data-bs-toggle="dropdown" aria-expanded="false">
        @* bootstrap svg icons *@
        <svg class="bi d-block mx-auto mb-1" fill="white" height="24" width="24">
            <use xlink:href="/lib/bootstrap-icons/bootstrap-icons.svg#house-door"/>
        </svg>
        @* Google Material icons *@
        <span class="material-icons md-18 md-light">face</span>

        @* Google Material symbols *@
        <span class="material-symbols-outlined">home</span>

        @* <i class="material-symbols-outlined">admin_panel_settings</i> *@
        Home
    </a>


    <ul class="dropdown-menu">
        <li>
            <a class="dropdown-item @(currentAction == "Index" && currentController == "Home" ? "active" : "")"
               asp-area="" asp-controller="Home" asp-action="Index" aria-current="page">
                <span class="material-icons md-light">face</span>
                <span class="fas fa-house"></span> Home
            </a>
        </li>
        <li>
            <a class="dropdown-item @(currentAction == "About" && currentController == "Home" ? "active" : "")"
               asp-area="" asp-controller="Home" asp-action="About">
                <span class="material-icons md-36 md-dark">face</span>
                <span class="fas fa-envelope"></span> About
            </a>
        </li>
        <li>
            <a class="dropdown-item @(currentAction == "Contact" && currentController == "Home" ? "active" : "")"
               asp-area="" asp-controller="Home" asp-action="Contacts">
                <span class="material-icons md-48 md-inactive">face</span>
                <span class="fas fa-envelope"></span> Contacts
            </a>
        </li>

        <li>
            <hr class="dropdown-divider">
        </li>
        <li>
            <a class="dropdown-item @(currentAction == "Cookies" && currentController == "Home" ? "active" : "")"
               asp-area="" asp-controller="Home" asp-action="Cookies">
                <i class="fas fa-envelope"></i> Cookies
            </a>
        </li>
        <li>
            <a class="dropdown-item @(currentAction == "CookiesPrivacy" && currentController == "Home" ? "active" : "")"
               asp-area="" asp-controller="Home" asp-action="CookiesPrivacy">
                <i class="fas fa-envelope"></i> Cookies Privacy
            </a>
        </li>

        <li>
            <hr class="dropdown-divider">
        </li>
        <li>
            <a class="dropdown-item @(currentAction == "Legal" && currentController == "Home" ? "active" : "")"
               asp-area="" asp-controller="Home" asp-action="Legal">
                <i class="fas fa-envelope"></i> Legal
            </a>
        </li>
        <li>
            <a class="dropdown-item @(currentAction == "Privacy" && currentController == "Home" ? "active" : "")"
               asp-area="" asp-controller="Home" asp-action="Privacy">
                <i class="fas fa-envelope"></i> Privacy
            </a>
        </li>

        <li>
            <hr class="dropdown-divider">
        </li>
        <li>
            <a class="dropdown-item @(currentAction == "TimeTracker" && currentController == "Home" ? "active" : "")"
               asp-area="" asp-controller="Home" asp-action="TimeTracker">
                <i class="fas fa-envelope"></i> Time Tracker
            </a>
        </li>
        <li>
            <a class="dropdown-item @(currentAction == "Threads" && currentController == "Home" ? "active" : "")"
               asp-area="" asp-controller="Home" asp-action="Threads">
                <i class="fas fa-envelope"></i> Threads
            </a>
        </li>
        <li></li>
        <li></li>
    </ul>
</div>