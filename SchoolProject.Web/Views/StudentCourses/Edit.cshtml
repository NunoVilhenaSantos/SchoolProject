@model SchoolProject.Web.Data.Entities.Students.StudentCourse

@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>

<h4>StudentCourse</h4>
<hr/>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id"/>
            <input type="hidden" asp-for="StudentId"/>
            <input type="hidden" asp-for="CourseId"/>

            <partial name="_StudentCoursesCE" />
           
            <div class="form-group">
                <label asp-for="IdGuid" class="control-label"></label>
                <input asp-for="IdGuid" class="form-control"/>
                <span asp-validation-for="IdGuid" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <button type="submit" class="btn btn-outline-primary"><span class="fa-regular fa-floppy-disk"></span> Save </button>
                <a asp-action="Index" class="btn btn-outline-success"><span class="fa-solid fa-rotate-left"></span> Back to List</a>
            </div>
        </form>
    </div>
</div>

