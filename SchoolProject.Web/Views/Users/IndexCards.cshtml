@using System.Reflection
@model IEnumerable<SchoolProject.Web.Data.Entities.Users.User>

@{
    var actionName = ViewContext.RouteData.Values["action"]?.ToString();
    var controllerName = ViewContext.RouteData.Values["controller"]?.ToString();
    var assemblyName = Assembly.GetExecutingAssembly().GetName().Name;
    var pageTitle = actionName + " - " + controllerName + " - " + assemblyName;
}

<h1>@pageTitle</h1>

<p>
    @* <a asp-action="Create" class="btn btn-outline-primary"><span class="material-symbols-outlined">add_box</span>Create New</a> *@
    <a asp-action="Create" class="btn btn-secondary"><span class="material-symbols-outlined">person_add</span>Create New</a>
</p>


<div class="album py-5 bg-body-tertiary">
    <div class="container">
        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 row-cols-xxl-5 g-3">
            @foreach (var item in Model)
            {
                <div class="col">
                    @* <div class="card shadow-sm"> *@
                    <div class="card shadow-sm">
                        <div class="card-img-top">
                            <img src="@item.ProfilePhotoIdUrl" alt="Profile Photo" class="img-fluid">
                        </div>

                        <div class="card-body">
                            <p class="card-text">@Html.DisplayFor(modelItem => item.FullName)</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning"> <span class="fa-regular fa-pen-to-square"></span> Edit </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info"> <span class="fa-regular fa-file"></span> Details </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger"><span class="fa-regular fa-trash-can"></span> Delete </a>
                                </div>
                                <small class="text-body-secondary px-2">
                                    @Html.DisplayNameFor(modelItem => item.Email)<br />
                                    @Html.DisplayFor(modelItem => item.Email)
                                </small>
                                <small class="text-body-secondary">
                                    @Html.DisplayNameFor(modelItem => item.Address)<br />
                                    @Html.DisplayFor(modelItem => item.Address)
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>