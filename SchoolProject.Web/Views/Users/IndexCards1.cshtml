@using System.Reflection
@model PaginationViewModel<SchoolProject.Web.Models.Users.UserWithRolesViewModel>

@{
    ViewData["Title"] = "List of Users";
    // Layout = "_Layout";

    var actionName = ViewContext.RouteData.Values["action"]?.ToString();
    var controllerName = ViewContext.RouteData.Values["controller"]?.ToString();
    var assemblyName = Assembly.GetExecutingAssembly().GetName().Name;

    var pageTitle = actionName + " - " + controllerName + " - " + assemblyName;
}

@* <h2>@pageTitle</h2> *@
<h2>@ViewData["Title"]</h2>

<div class="container-fluid py-3">
    <div class="row">
        @* <div class="col-md-4"> *@
        <div class="col">
            @* <a asp-action="Create" class="btn btn-secondary p-2"><span class="fa-regular fa-square-plus fa-xl p-1 pe-1"></span> Create New </a> *@
            <a asp-action="Create" class="btn btn-secondary p-2"><span class="fa-solid fa-circle-plus fa-xl p-1 pe-1"></span> Create New </a>
        </div>
        @* <div class="col-md-8 justify-content-end"> *@
        <div class="col justify-content-end">
            <partial model="Model" name="Pagination/_PageNavigationTop"/>
        </div>
    </div>
</div>

<div class="album bg-body-tertiary p-4">
    <div class="container-fluid">
        <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 row-cols-lg-2 row-cols-xl-3 row-cols-xxl-5 g-3">
            @foreach (var item in Model.RecordsQuery)
            {
                <div class="col">
                    @* <div class="card shadow-sm"> *@
                    <div class="card shadow-sm">
                        <div class="card-img-top">
                            <img src="@item.User.ProfilePhotoIdUrl" alt="Profile Photo" class="img-fluid">
                        </div>

                        <div class="card-body">
                            <p class="card-text">@Html.DisplayFor(modelItem => item.User.FullName)</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-action="Edit" asp-route-id="@item.User.Id" class="btn btn-outline-warning"> <span class="fa-regular fa-pen-to-square"></span> Edit </a>
                                    <a asp-action="Details" asp-route-id="@item.User.Id" class="btn btn-outline-info"> <span class="fa-regular fa-file"></span> Details </a>
                                    <a asp-action="Delete" asp-route-id="@item.User.Id" class="btn btn-outline-danger"><span class="fa-regular fa-trash-can"></span> Delete </a>
                                </div>
                                @* <small class="text-body-secondary px-2"> *@
                                @*     @Html.DisplayNameFor(modelItem => item.User.Email)<br/> *@
                                @*     @Html.DisplayFor(modelItem => item.User.Email) *@
                                @* </small> *@
                                @* <small class="text-body-secondary"> *@
                                @*     @Html.DisplayNameFor(modelItem => item.User.Address)<br/> *@
                                @*     @Html.DisplayFor(modelItem => item.User.Address) *@
                                @* </small> *@
                                <small class="text-body-secondary px-2">
                                    @Html.DisplayFor(modelItem => item.User.Email)<br/><br/>
                                    @Html.DisplayFor(modelItem => item.User.Address)
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<partial name="Pagination/_PageNavigationBottom" model="Model"/>


<script>
   $(document).ready(function () {

       $('#pageSizeSelect').change(function () {
           const selectedPageSize = $(this).val();
           const selectedSortProperty = $('#sortProperty').val();
           const selectedSortOrder = $('#sortOrder').val();

           // Redireciona para a primeira página com os parâmetros selecionados
           window.location.href = '@Url.Action("IndexCards1", new {pageNumber = 1, pageSize = " + selectedPageSize + ", sortOrder = " + selectedSortOrder + ", sortProperty = " + selectedSortProperty + "})';
       });
   });

</script>