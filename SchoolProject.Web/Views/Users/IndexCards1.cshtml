@model SchoolProject.Web.Models.PaginationViewModel<SchoolProject.Web.Models.Users.UserWithRolesViewModel>

@{
    ViewData["Title"] = "List of Users";
    // Layout = "_Layout";
}

<h2>@ViewData["Title"]</h2>


<nav aria-label="Page navigation example">
    <ul class="pagination justify-content-end">

        @* <!-- First page link --> *@
        <li class="page-item @if (Model.PageNumber == 1) { <text>disabled</text> }">
            <a class="page-link" href="@Url.Action("IndexCards1", new {pageNumber = 1, pageSize = Model.PageSize})">First</a>
        </li>
        <li class="page-item @if (Model.PageNumber == 1) { <text>disabled</text> }">
            <a class="page-link" href="@Url.Action("IndexCards1", new {pageNumber = Model.PageNumber - 1, pageSize = Model.PageSize})">Previous</a>
        </li>

        <!-- Page links -->
        @for (var i = 1; i <= Model.TotalPages; i++)
        {
            @* <!-- Display first page --> *@
            @if (i == 1)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("IndexCards1", new {pageNumber = i, pageSize = Model.PageSize})">@i</a>
                </li>
            }

            @* <!-- Display last page --> *@
            else if (i == Model.TotalPages)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("IndexCards1", new {pageNumber = i, pageSize = Model.PageSize})">@i</a>
                </li>
            }

            @* <!-- Display up to 2 pages before and after current page --> *@
            else if ((i >= Model.PageNumber - 2 && i <= Model.PageNumber + 2) || i == 1 || i == Model.TotalPages)
            {
                <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                    <a class="page-link" href="@Url.Action("IndexCards1", new {pageNumber = i, pageSize = Model.PageSize})">@i</a>
                </li>
            }

            @* <!-- Display "..." when there are more pages --> *@
            else if ((i == Model.PageNumber - 3 || i == Model.PageNumber + 3) && Model.TotalPages > 7)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#">...</a>
                </li>
            }
        }

        <!-- Next page link -->
        <li class="page-item @if (Model.PageNumber == Model.TotalPages) { <text>disabled</text> }">
            <a class="page-link" href="@Url.Action("IndexCards1", new {pageNumber = Model.PageNumber + 1, pageSize = Model.PageSize})">Next</a>
        </li>
        <li class="page-item @if (Model.PageNumber == Model.TotalPages) { <text>disabled</text> }">
            <a class="page-link" href="@Url.Action("IndexCards1", new {pageNumber = Model.TotalPages, pageSize = Model.PageSize})">Last</a>
        </li>

    </ul>
</nav>


